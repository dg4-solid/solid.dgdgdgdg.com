---
import { Image } from "astro:assets"

import BrandBar from "@/components/BrandBar.astro"
import Button from "@/components/Button.astro"
import Form from "@/components/Form.astro"
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <link rel="icon" href="/images/favicon.ico" />

    <meta property="og:title" content="ラジオのタイトルを入力 | dgdgdgdg Solid Point" />
    <meta property="og:site_name" content="dgdgdgdg Solid Point" />
    <meta property="og:url" content="https://solid.dgdgdgdg.com/project/radio" />
    <meta
      property="og:description"
      content="想像の閃きが実体を得る凝固点 Solid Point | dgdgdgdgを始点とする共作チーム。"
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://solid.dgdgdgdg.com/images/radio-cover.png" />

    <title>ラジオのタイトルを入力 | dgdgdgdg Solid Point</title>
  </head>

  <body>
    <main>
      <section id="article-header">
        <a class="back" href="/"> Back to Top </a>
        <div class="container">
          <h1>Radio 📻</h1>
          <div class="cover">
            <Image
              src="/images/radio-cover.png"
              alt="ラジオのカバー画像"
              width={1920}
              height={1080}
              loading="eager"
            />
          </div>
        </div>
      </section>

      <section id="about">
        <div class="container">
          <h2 class="title">About</h2>
          <iframe
            title="ラジオのタイトルを入力 - YouTube再生リスト(投稿日時の新しい順)"
            src="https://www.youtube.com/embed/videoseries?list=UURz6N_gsMHfNhvLOGMEQtjg"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            loading="lazy"
            allowfullscreen></iframe>
          <p class="text">
            ゆるく雑談するラジオ
            <br />
            「ラジオのタイトルを入力」
          </p>
          <div class="button-wrapper">
            <Button href="https://youtube.com/@EtRt" text="YouTube Channel" external={true} />
          </div>
        </div>
      </section>

      <section id="member">
        <div class="container">
          <h2 class="title">Member</h2>
          <div class="items-wrapper">
            <div id="tusk" class="item">
              <div class="profile-image"></div>
              <h3 class="name">Tusk</h3>
              <p class="position">Personality</p>
              <div class="social-wrapper">
                <a
                  href="https://x.com/@Tusk_15679"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="Tusk - X (Twitter)"
                >
                  <img src="/images/icon/x.svg" alt="" loading="lazy" />
                </a>
                <a
                  href="https://instagram.com/tusk_15679"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="Tusk - Instagram"
                >
                  <img src="/images/icon/instagram.svg" alt="" loading="lazy" />
                </a>
              </div>
            </div>
            <div id="dgdgdgdg" class="item">
              <div class="profile-image"></div>
              <h3 class="name">dgdgdgdg</h3>
              <p class="position">Personality</p>
              <div class="social-wrapper">
                <a
                  href="https://x.com/@dg4_design"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="dgdgdgdg - X (Twitter)"
                >
                  <img src="/images/icon/x.svg" alt="" loading="lazy" />
                </a>
                <a
                  href="https://misskey.design/@dg4_design"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="dgdgdgdg - Misskey"
                >
                  <img src="/images/icon/misskey.svg" alt="" loading="lazy" />
                </a>
                <a
                  href="https://www.instagram.com/dg4_design"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="dgdgdgdg - Instagram"
                >
                  <img src="/images/icon/instagram.svg" alt="" loading="lazy" />
                </a>
                <a
                  href="https://bsky.app/profile/dgdgdgdg.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label="dgdgdgdg - Bluesky"
                >
                  <img src="/images/icon/bsky.svg" alt="" loading="lazy" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="contactForm">
        <div class="container">
          <h2 class="title">
            Contact<span> to ラジオのタイトルを入力</span>
          </h2>
          <Form
            destination={{
              googleFormLink:
                "https://docs.google.com/forms/u/1/d/e/1FAIpQLSc_O7Ald3TqkgNkkwBnaHo-W3oq5BKo_UUiE38we38UL8nmJA/formResponse",
              inputNames: {
                name: "entry.183923869",
                email: "emailAddress",
                select: "entry.1363996325",
                textarea: "entry.1860530349",
              },
              autoCompletes: [
                {
                  name: "依頼",
                  message: "依頼内容, 趣旨・目的, 要望など",
                },
                {
                  name: "おたより: ふつうのおたより",
                  message: "おたよりの内容",
                },
                {
                  name: "その他",
                },
              ],
            }}
          />
        </div>
      </section>

      <BrandBar />
    </main>
  </body>
</html>

<style is:global>
  @import "@/styles/_reset.css";
  @import "@/styles/global.sass";
  @import "@/styles/project.sass";
</style>
