{
  "plugins": ["prettier-plugin-astro-organize-imports"],
  "singleQuote": false,
  "jsxSingleQuote": false,
  "htmlWhitespaceSensitivity": "strict",
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "singleQuote": false,
        "semi": false,
        "tabWidth": 2,
        "printWidth": 100,
        "trailingComma": "es5",
        "bracketSameLine": false,
        "jsxSingleQuote": false
      }
    },
    {
      "files": ["*.sass", "*.scss"],
      "options": {
        "parser": "sass",
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
